<h1>New Candidate</h1>

<%= form_with model: [@hiring_position, @candidate] do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :address %><br>
    <%= form.text_area :address %><br>
  </div>

    <div>
     <%= form.label :age %><br>
    <%= form.text_area :age %><br>
  </div>
    <div>
    <%= form.label :cgpa %><br>
    <%= form.text_area :cgpa %><br>
  </div>

  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image%>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
