<h1>Edit Positon </h1>

<%= form_with model: @hiring_position do |form| %>
  <form class="form-horizontal">
    <div class="form-group">
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </div>
    
    <div class="form-group">
      <%= form.label :image, style: "display: block" %>
      <%= form.file_field :image%>
    </div>
    <div>
      <%= form.submit %>
    </div>
<% end %>

